    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_food">

    <fragment
        android:id="@+id/navigation_food"
        android:name="com.example.foodapp.ui.food.FoodFragment"
        android:label="@string/title_food"
        tools:layout="@layout/fragment_food" />

    <fragment
        android:id="@+id/navigation_fav_beverage"
        android:name="com.example.foodapp.ui.favorite.FavoritBeverage"
        android:label="@string/title_fav_beverage"
        tools:layout="@layout/fragment_restaurant" />

    <fragment
        android:id="@+id/navigation_restaurant"
        android:name="com.example.foodapp.ui.restaurant.RestaurantFragment"
        android:label="@string/title_restaurant"
        tools:layout="@layout/fragment_restaurant" />
